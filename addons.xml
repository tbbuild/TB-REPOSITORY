<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.program.xbmchub.notifications" version="1.0.3"
       name="Notifications" provider-name="tvaddons.ag">
  <requires>
  	<import addon="xbmc.python" version="2.1.0"/>
  	<import addon="script.module.addon.common" optional="true" />
  </requires>
  <extension point="xbmc.python.script" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="service.py" start="startup">
  </extension>
  <extension point="xbmc.addon.metadata">
  	<summary>TVADDONS NEWS</summary>
  	<description>Receive Important TVADDONS Notifications. Unsubscribe within Add-on Settings.</description>
  	<disclaimer>We take no responsibility for any problems this plugin might in any way, form, shape or size cause.</disclaimer>
  	<language>en</language>
  	<platform>all</platform>
  	<forum>http://forums.tvaddons.ag/forum.php</forum>
  	<website>http://www.tvaddons.ag/</website>
  	<source></source>
  	<email></email>
  </extension>
</addon>

<addon id="plugin.video.tbbuild" name="TB BUILD Wizard" version="0.0.3" provider-name="tbbuild.co.uk">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.addon.common" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">TB Build Wizard :)</summary>
    <description lang="en">TB BUILD WIZARD, SPORTS, FILMS, TV SHOWS. ALL VIEWS SET AND INCLUDES ADVANCED XML, SO BYE BYE BUFFERING!</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.tbtv" name="TB TV" version="1.0.2" provider-name="TB BUILD">
    <requires>
		<import addon="xbmc.python" version="2.14.0"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="addon.py">
		<provides>video</provides>
	</extension>
	<extension point="xbmc.service" library="server.py" start="startup" />
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary lang="en">TB TV</summary>
		<description lang="en">TB BUILD TV</description>
		<license>GNU General Public License, v1</license>
		<language></language>

	</extension>
</addon>

<addon id="repository.TB.BUILD.REPO" name=".[COLOR yellow]TB[/COLOR][COLOR white] BUILD[/COLOR] REPO" version="0.0.3" provider-name="TB BUILD">
	<extension point="xbmc.addon.repository" name=".[COLOR yellow]TB[/COLOR][COLOR white] BUILD[/COLOR] REPO">
		<info compressed="false">https://github.com/tbbuild/TB-REPOSITORY/raw/master/addons.xml</info>
		<checksum>https://github.com/tbbuild/TB-REPOSITORY/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/tbbuild/TB-REPOSITORY/raw/master/repo</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>TB BUILD REPOSITORY</summary>
		<description>Main Repository for TB BUILD</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
